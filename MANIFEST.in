# Include documentation
include README.md
include LICENSE
include requirements.txt
include MANIFEST.in

# Include Python files
include *.py

# Include example data files
recursive-include input-output *.dat *.txt
exclude input-output/*.out
exclude input-output/*.inf
exclude input-output/a
exclude input-output/slurm-*

# Include test files
include test_*.py

# Exclude development files
exclude .gitignore
exclude setup.py
prune backup/
prune __pycache__/
prune .git/
prune .pytest_cache/
prune .mypy_cache/

# Exclude OS-specific files
global-exclude .DS_Store
global-exclude Thumbs.db
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.swp
global-exclude *.swo
global-exclude *~

# Exclude generated files
global-exclude *.png
global-exclude *.jpg
global-exclude *.gif
global-exclude *.log 